{% set formats = [
	'webp'
] %}

{% set widths = [
	'2000',
	'1280',
	'960',
	'640'
] %}

{% set sizes = [
	'(min-width: 1760px) 616px',
	'(min-width: 1024) calc(75vw - 20px - 2 * 42px)',
	'calc(100vw - 2 * 20px)'
] %}

{% macro introPicture(
	context
) %}
	<picture class="intro__picture intro__picture--{{ context }}">
		{% for format in formats %}
			<source
				srcset="
					{%- for width in widths -%}
						/images/intro/intro-pic-{{ width }}.{{ format }} {{ width }}w
						{{- ',' if not loop.last -}}
					{%- endfor -%}
				"
				sizes="
					{%- for size in sizes -%}
						{{- size -}}
						{{- ',' if not loop.last -}}
					{%- endfor -%}
				"
				type="image/{{ format }}"
			>
		{% endfor %}
		<img class="intro__photo"
			src="/images/intro/intro-pic-2000.jpg"
			width="600" height="600"
			fetchpriority="high"
			alt="Portrait head shot"
		>
	</picture>
{% endmacro %}
